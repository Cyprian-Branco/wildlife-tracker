{{#block "header"}}

    <!doctype html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{{#block "title"}}Wildlife Tracker{{/block}}</title>
        <link href="/images/app.css" rel="stylesheet" >
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </head>

{{/block}}
<body>
<nav class="nav nav-tabs >
    <li role="presentation" class="active"><a href="/">Home</a></li>
<li role="presentation"><a href="/animals/new">Add an Animal</a></li>

<li role="presentation" class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
        Endangered Animals<span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
        {{#if endangeredAnimals}}
            {{#each endangeredAnimals}}
                <li><a href="/endangeredAnimals/{{id}}">{{animal_name}}</a></li>
            {{/each}}
            <li><a href="/endangeredAnimals/new">Add an Endangered Animal</a></li>
        {{else}}
            <li><a href="/endangeredAnimals/new">Add an Endangered Animal</a></li>
        {{/if}}
    </ul>
</li>

<li role="presentation" class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
        Sightings<span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
        {{#if sightings}}
            {{#each sightings}}
                <li><a href="/sightings/{{id}}">{{ranger_name}}</a></li>
            {{/each}}
            <li><a href="/sightings/new">Add a Sighting</a></li>
        {{else}}
            <li><a href="/sightings/new">Add a Sighting</a></li>
        {{/if}}
    </ul>
</li>
</nav>
<hr>
<div class="container">
    <br>
{{#block "content"}}
{{/block}}
</div>
{{#block "footer"}}
    </div>
    </body>
    </html>
{{/block}}